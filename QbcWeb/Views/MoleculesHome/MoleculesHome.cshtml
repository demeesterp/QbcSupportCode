
@{
    ViewData["Title"] = "MoleculesHome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pure-g">
    <div class="pure-u-1-3">
    </div>
    <div class="pure-u-1-3">
        <h2>Chemical Projects :</h2>
        @foreach (var p in Model.ProjectList)
        {
            <div class="pure-g">
                <div class="pure-u-1-2">
                    <a title="@p.Project.Description" asp-controller="MoleculesHome" asp-action="ProjectModels" asp-route-name="@p.Project.Name">@p.Project.Name</a>
                    <p>@p.Project.Description</p>
                </div>
                <div class="pure-u-1-2">
                    <a class="pure-button pure-button-primary @p.CanDelete" asp-controller="MoleculesHome" asp-action="DeleteProject" asp-route-name="@p.Project.Name">Delete</a>
                </div>
            </div>
        }
    </div>
    <div class="pure-u-1-3">
        <h2>Create New Project :</h2>
        <form asp-controller="MoleculesHome" asp-action="NewProject" method="post" class="pure-form pure-form-stacked">
            <label>Name :</label>
            <input type="text" id="Name" placeholder="Project name" name="Name" />
            <label>Description :</label>
            <textarea id="Description" placeholder="Project description" name="Description" cols="40" rows="10"></textarea>
            <button type="submit" class="pure-button pure-button-primary">Create</button>
        </form>
    </div>
</div>

